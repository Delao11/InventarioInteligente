@model InventarioInteligente.Models.Product
@{
    ViewData["Title"] = "Eliminar producto";
}

<h1>Eliminar producto</h1>

<div class="alert alert-danger">
    ¿Seguro que desea eliminar el producto <strong>@Model.Name</strong>?
</div>

<dl class="row">
    <dt class="col-sm-2">Precio</dt>
    <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

    <dt class="col-sm-2">Stock</dt>
    <dd class="col-sm-10">@Model.Stock</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
