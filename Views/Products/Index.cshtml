@model IEnumerable<InventarioInteligente.Models.Product>
@{
    ViewData["Title"] = "Productos";
    var search = ViewData["Search"] as string ?? "";
}

<h1>Productos</h1>

<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" value="@search" class="form-control" placeholder="Buscar por nombre..." />
        <button class="btn btn-primary" type="submit">Buscar</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Limpiar</a>
        <a asp-action="Create" class="btn btn-success ms-2">Nuevo producto</a>
        <a asp-action="Statistics" class="btn btn-info ms-2">Estadísticas</a>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Description</td>
                <td>@p.Price.ToString("C")</td>
                <td>@p.Stock</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
